{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "es7", "es2017", "es2019", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "@env/*": ["./public/src/environments/*"],
      "@app/*": ["./public/src/app/*"],
      "@app-assets/*": ["./public/src/app/assets/*"]
    }
  },

  "exclude": ["node_modules"]
}
