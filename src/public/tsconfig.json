  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@env/*": [
        "environments/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@app-assets/*": [
        "app/assets/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": false,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "types": [
      "node"
    ]
  }
}